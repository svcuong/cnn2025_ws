<launch>
  <!-- ========== Static TF: base_link -> lidar_link ========== -->
  <node pkg="tf2_ros"
        type="static_transform_publisher"
        name="lidar_to_base_tf"
        args="0 0 0 0 0 0 base_link lidar_link" />

  <!-- ========== RoboSense Helios Driver ========== -->
  <node pkg="rslidar_sdk"
        type="rslidar_sdk_node"
        name="rslidar_driver"
        output="screen">
    <param name="config_path" value="$(find bringup)/config/lidar_sensor.yaml"/>
  </node>
  
  <!-- ========== LiDAR Adapter ========== -->
  <node pkg="sensors"
        type="lidar_node.py"
        name="lidar_node"
        output="screen">

    <param name="input_topic" value="/rslidar_points"/>
    <param name="output_topic" value="/sensors/lidar/points"/>
    <param name="frame_id" value="lidar_link"/>

  </node>

    <!-- ========== RViz ========== -->
  <node pkg="rviz"
        type="rviz"
        name="rviz"
        args="-d $(find bringup)/rviz/lidar.rviz"
        output="screen"/>


</launch>
